<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="horizontal"
    android:background="@drawable/shape_bill_history_bg" >
    
    <TextView 
        android:id="@+id/item_bill_history_lastCount"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:text="@string/last_data"/>
    
    <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/lightgrey"/>
    
    <TextView 
        android:id="@+id/item_bill_history_currentCount"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:text="@string/current_data"/>
    
    <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/lightgrey"/>
    
    <TextView 
        android:id="@+id/item_bill_history_perEPrice"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:text="@string/per_e_price"/>
    
    <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/lightgrey"/>
    
    <TextView 
        android:id="@+id/item_bill_history_airFee"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:text="@string/air_fee"/>
    
    <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/lightgrey"/>
    
    <TextView 
        android:id="@+id/item_bill_history_publicFee"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:text="@string/public_fee"/>
    
    <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/lightgrey"/>
    
    <TextView 
        android:id="@+id/item_bill_history_updateTime"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:text="@string/updateTime"/>

</LinearLayout>
